@model FilmyKategorii
@{ 

}
<head>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<h1>3 najnowsze filmy</h1>
<table class="table table-striped">
    <thead>
        <tr>
            @foreach (var film in Model.FilmyNajnowsze)
            {
            <td>
                <div class="jumbotron jumbotron-fluid">
                    <div class="container text-center">
                        <h4>@film.Tytul</h4>
                        <hr>
                        <p>@film.Opis</p>
                        <hr>
                        <span><b>długość filmu: </b>@film.DlugoscFilmu minut</span>
                    </div>
                </div>
            </td>
            }
        </tr>
    </thead>
    <tbody>
        <thead>
            <tr>
                <td>Tytuł</td>
                <td>Rezyser</td>
                <td>Data Dodania</td>
                <td>Cena</td>
            </tr>


        </thead>
        @foreach (var film in Model.FilmyKategoria)
        {
        <tr>
            <td>@film.Tytul</td>
            <td>@film.Rezyser</td>
            <td>@film.DataDodania.ToString()</td>
            <td>@film.Cena zł</td>
            <td><a href="@Url.Action("Szczegoly", "Filmy" , new { idFilmu = film.Id})">Szczegóły</a></td>
            <td><a href="@Url.Action("Kup", "Koszyk" , new { id = film.Id})">Dodaj do koszyka</a></td>

        </tr>
        }
    </tbody>
</table>
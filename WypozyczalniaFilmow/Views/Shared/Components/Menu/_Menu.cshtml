@model IEnumerable<WypozyczalniaFilmow.Models.Kategoria>

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">

        <ul class="navbar-nav mr-auto">
            <li>
            @if (User.Identity.IsAuthenticated)
            {
                <a class="nav-item nav-link" href="@Url.Action("Logout","Account")"> @User.Identity.Name</a>
            }
            else
            {
                <a class="nav-item nav-link" href="@Url.Action("Login","Account")">Login</a>
            }
            </li>
            @foreach (var kategoria in Model)
            {
                <li>
            <a class="nav-item nav-link" href="@Url.Action("Lista", "Filmy" , new { nazwaKategorii=kategoria.Nazwa})"> @kategoria.Nazwa </a>
                </li>
            }
            <li>
            <a class="nav-item nav-link" href="@Url.Action("Wszystkie", "Filmy")"> Wszystkie </a>
            </li>
        </ul>
        <div class="form-inline">
            @using (Html.BeginForm("Szukaj", "Filmy"))
            {
                @Html.TextBox("tekst", null, new { @class = "form-control mr-sm-2", @type = "search", @placeholder = "Szukaj..." })
                <button class="btn btn-outline-light my-2 my-sm-0"
                        type="submit">
                    Szukaj
                </button>
            }
        </div>

    </nav>
</header>

